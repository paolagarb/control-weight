@{
    ViewData["Title"] = "Página Inicial";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h2 class="text-center index-page">
        ACOMPANHE SUA EVOLUÇÃO!
    </h2>
    <div class="logo-index">
        <img src="~/image/logo.png" alt="imagem maçã" class="logo" />
    </div>

    <div class="text-right">
        <h4>PODER <b>VER</b> SUA EVOLUÇÃO É O MELHOR INCENTIVO!</h4>
    </div>

    @if (User?.Identity.IsAuthenticated == false)
    {
        <div>
            <a href="../Identity/Account/Login" class="nav-link login"><u>Login</u></a>
        </div>
        <div>
            <a href="../Identity/Account/Register" class="nav-link text-right login"><u>Cadastro</u></a>
        </div>
    }

</body>
</html>
